      .code-label {
        font-size: 16px;
        color: #6c757d;
        margin-bottom: 15px;
        font-weight: 500;
      }
      
      .confirmation-code {
        font-size: 32px;
        font-weight: bold;
        color: #495057;
        letter-spacing: 8px;
        background-color: white;
        padding: 15px 20px;
        border-radius: 6px;
        border: 2px solid #e9ecef;
        display: inline-block;
        margin: 10px 0;
